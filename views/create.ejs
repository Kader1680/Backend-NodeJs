<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Ninja <%= title %></title>
</head>
<style>
    input{
        border: none;
        padding: 6px 10px;
        margin: 10px 0px;
        outline: none;
        width: 50%;
    }
    button{
        margin: 18px 0px;
        width: 10%;
        padding: 6px;
        font-weight: bolder;
    }
</style>
<body>

    <%- include('./partiel/nav.ejs') %> 

    <div class="Blogs content">
        <form action="/blogs" method="post">
            <label for="title">title</label><br>
            <input type="text" name="title" required><br>
            <label for="snippet">snippet</label><br>
            <input type="text" name="snippet" required><br>
            <label for="body"> body </label><br>
            <textarea rows="5" cols="" name="body" required></textarea><br>
            <button>Submite</button>
        </form>
    </div>

    <%- include('./partiel/footer.ejs') %> 
</body>
</html>